<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoGreenPath_C23PM02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/on_primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EcoGreenPath_C23PM02.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EcoGreenPath_C23PM02.CustomActionBar">
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:textColorPrimary">@color/font_color1</item>
    </style>

    <style name="Button.Custom" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@color/on_primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>


    <style name="Button.arrow" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@color/on_primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>


    <style name="Theme.EcoGreenPath_C23PM02.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <!-- Base application theme. -->
    <style name="Base.Theme.EcoGreenPath_C23PM02" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>





</resources>