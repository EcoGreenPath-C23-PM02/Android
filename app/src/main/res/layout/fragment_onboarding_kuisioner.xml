<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/gainsboro"
    tools:context=".ui.kuisioner.OnboardingKuisionerFragment">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_kuisioner"
        >

        <ImageView
            android:id="@+id/imv_onboarding"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_onboarding" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_onboarding"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/on_primary_color"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/onboarding_text"/>

    </RelativeLayout>
</LinearLayout>