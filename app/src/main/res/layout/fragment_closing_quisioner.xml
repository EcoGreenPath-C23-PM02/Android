<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/light_green_background"
    tools:context=".ui.kuisioner.EndKuisionerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg_kuisioner">

        <ImageView
            android:id="@+id/imv_end_kuisioner"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/nav_header_height"
            android:src="@drawable/icon_end_kusioner" />
        <ImageButton
            android:id="@+id/btn_arrow_back"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_back_onboarding" />

        <TextView
            android:id="@+id/tv_end_kuisioner"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_end_kuisioner"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/on_primary_color"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/onboarding_text"/>

        <Button
            android:id="@+id/btn_lets_go"
            android:layout_width="207dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_end_kuisioner"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary_variant_color"
            android:backgroundTint="@color/on_primary_color"
            android:text="@string/let_s_go"
            android:textSize="@dimen/text_size_medium"
            android:backgroundTintMode="src_atop"
            android:fontFamily="@font/nunito_black"
            android:textAllCaps="false"
            />




    </RelativeLayout>

</LinearLayout>